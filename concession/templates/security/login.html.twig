{% extends 'bootstrap.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3 d-flex justify-content-center">
               - Vous êtes connectés ! -{#en tant que {{ app.user.userIdentifier }}  <a class="text-decoration-none" href="{{ path('app_logout') }}"> Déconnexion</a>#}
            </div>
        {% endif %}

        <h3 class="display-5 mb-3 text-center">Connectez-vous</h3>
        <div class="col-6 mx-auto">
        
        <label for="username">Email</label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control mb-1" autocomplete="email" required autofocus>

        <label for="password">Password</label>
        <input type="password" name="_password" id="password" class="form-control mb-2" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        
        <input type="hidden" name="_target_path" value="/vehicules/"> 

        

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-lg btn-outline-primary" type="submit">
            Sign in
        </button>
        
        </div>
        
    </form>
{% endblock %}
