{% extends "bootstrap.html.twig" %}

{% block title %}S.U.V Concession | gestion véhicules{% endblock %}

{% block body %}

  <h1 class="display-5 text-center mt-3 mb-3">Gestionnaire de véhicules</h1>

  <table class="table text-center border ">
    <thead class="text-capitalize ">
      <td class="fw-bold border bg-light text-uppercase">#</td>
      <td class="fw-bold border bg-light text-uppercase">nom</td>
      <td class="fw-bold border bg-light text-uppercase">modele</td>
      <td class="fw-bold border bg-light text-uppercase">description</td>
      <td class="fw-bold border bg-light text-uppercase">photo</td>
      <td class="fw-bold border bg-light text-uppercase">en vente</td>
      <td class="fw-bold border bg-light text-uppercase">action</td>
    </thead>
    <tbody> 
      {% for key, value in vehicules %}
        <tr>
          <th class="fw-bold bg-light text-capitalize"> {{value.id}}  </th>
          <th class="fw-bold bg-light text-capitalize"> {{value.nom}} </th>
          <td> {{value.modele}} </td>
          <td>{{value.description}}</td>
          <td class="bg-light"><img src="{{value.image}}" alt="range rover" class="w-100 img-fluid object-fit-cover" style="height:100px"></td>
          <td>{{value.isEnVente}}</td>
          <td>
            <a href="{{path("modifierVehicule",  {id : value.id }) }}"><input type="submit" value="modifier" class="btn btn-outline-warning my-2" style="width:100px"><br></a>    
            <a href="{{path("supprimerVehicule",  {id : value.id }) }}"><input type="submit" value="supprimer" class="btn btn-outline-danger " style="width:100px"></a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
    <tfoot>
      <tr>
        <td class="fw-bold ">Ajouter un véhicule</td>
        <a href="{{path("ajouterVehicule")}}"><td><input type="submit" value="ajouter" class="btn btn-outline-success mb-1" style="width:100px"></td></a>
      </tr>
    </tfoot>
  </table>

{% endblock %}
